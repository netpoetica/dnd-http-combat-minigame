{
  "name": "dnd-http-combat-minigame",
  "version": "1.0.0",
  "description": "A turn-based HTTP server and client where you fight a 3D goblin",
  "main": "dist/server/main.js",
  "dependencies": {
    "@xstate/react": "^1.0.3",
    "body-parser": "^1.19.0",
    "connect-redis": "^5.0.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "redis": "^3.0.2",
    "three": "^0.122.0",
    "uuid": "^8.3.1",
    "webfontloader": "^1.6.28",
    "xstate": "^4.14.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/connect-redis": "0.0.15",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/redis": "^2.8.28",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "cpy-cli": "^3.1.1",
    "fantasy-content-generator": "^4.6.7",
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsify": "^5.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "compile:server": "tsc -p tsconfig.server.json",
    "compile:client": "mkdirp dist/client && cpy 'client/public/**/*.*' dist --parents  && browserify -g [ babelify --presets [ @babel/preset-env ] ] ./client/app.tsx --debug -p [ tsify --debug ] > ./dist/client/public/js/app.js",
    "compile": "npm run compile:server && npm run compile:client",
    "start:server": "node dist/server/main.js",
    "clean": "rimraf dist && rimraf build/*.tsbuildinfo",
    "test": "jest ./server",
    "lint": "tslint -p ./"
  },
